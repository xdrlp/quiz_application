rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    match /user_profiles/{fileName} {
      // Allow read if the user is authenticated (so they can see each other's avatars)
      allow read: if request.auth != null;
      
      // Allow write if:
      // 1. User is authenticated and matches the filename ID (uid + .jpg)
      // 2. File size is less than 1MB
      // 3. Content type is image/jpeg
      allow write: if request.auth != null 
                   && fileName == request.auth.uid + '.jpg'
                   && request.resource.size < 1 * 1024 * 1024
                   && request.resource.contentType == 'image/jpeg';
    }
  }
}
